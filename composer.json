{
    "name": "devlabor/german-holidays",
    "description": "A PHP package to get german holidays from feiertage-api.de",
    "keywords": [
        "devlabor",
        "german",
        "holidays"
    ],
    "homepage": "https://github.com/devlabor/german-holidays",
    "license": "MIT",
    "authors": [
        {
            "name": "Jeffrey Reichardt",
            "email": "reichardt@devlabor.com",
            "homepage": "https://devlabor.com",
            "role": "CEO"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.0",
        "vimeo/psalm": "^4.0",
        "ext-calendar": "*"
    },
    "autoload": {
        "psr-4": {
            "DevLabor\\GermanHolidays\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevLabor\\GermanHolidays\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
